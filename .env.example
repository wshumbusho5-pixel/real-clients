# Aerial Leads - Environment Variables
# Copy this file to .env and fill in your actual values

# ========================================
# Skip Tracing APIs
# ========================================
BATCH_SKIP_TRACE_API_KEY=your_api_key_here
BATCH_SKIP_TRACE_URL=https://api.batchskiptracing.com/v1

# Alternative: BeenVerified (if using)
BEEN_VERIFIED_USERNAME=your_username
BEEN_VERIFIED_PASSWORD=your_password

# Alternative: TruePeopleSearch (free but limited)
# No API key needed

# ========================================
# Database Settings
# ========================================
USE_DATABASE=false
DATABASE_PATH=data/leads.db
DATABASE_TYPE=sqlite  # sqlite, postgresql, mysql

# PostgreSQL (optional)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=aerial_leads
# DB_USER=postgres
# DB_PASSWORD=your_password

# ========================================
# Scraping Settings
# ========================================
REQUEST_DELAY=2  # Seconds between requests
REQUEST_TIMEOUT=30  # Seconds
MAX_RETRIES=3
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Proxy settings (optional)
# USE_PROXY=false
# PROXY_URL=http://your-proxy:port

# ========================================
# Scoring Configuration
# ========================================
# Tier thresholds (0-100 score)
TIER_1_THRESHOLD=80  # 5-star leads
TIER_2_THRESHOLD=60  # 4-star leads
TIER_3_THRESHOLD=40  # 3-star leads

# Pricing per lead tier
TIER_1_PRICE=100
TIER_2_PRICE=75
TIER_3_PRICE=50

# ========================================
# Export Settings
# ========================================
DEFAULT_EXPORT_FORMAT=csv  # csv, json, excel
ENABLE_PDF_REPORTS=true
ENABLE_JSON_EXPORT=true

# ========================================
# Web Dashboard
# ========================================
FLASK_SECRET_KEY=your_secret_key_here_change_this
FLASK_DEBUG=false
FLASK_PORT=5000
FLASK_HOST=0.0.0.0

# ========================================
# Logging
# ========================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/aerial_leads.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ========================================
# Feature Flags
# ========================================
ENABLE_CODE_VIOLATIONS_SCRAPER=true
ENABLE_DNC_SCRUBBING=true
ENABLE_VACANCY_DETECTION=true
ENABLE_COMPARABLE_SALES=false  # Future feature

# ========================================
# Email Notifications (optional)
# ========================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# NOTIFICATION_EMAIL=your_email@gmail.com

# ========================================
# Third-Party Integrations (future)
# ========================================
# TWILIO_ACCOUNT_SID=your_sid
# TWILIO_AUTH_TOKEN=your_token
# TWILIO_PHONE_NUMBER=+1234567890

# PODIO_CLIENT_ID=your_client_id
# PODIO_CLIENT_SECRET=your_secret

# ========================================
# Development Settings
# ========================================
ENVIRONMENT=development  # development, staging, production
DEBUG_MODE=true
